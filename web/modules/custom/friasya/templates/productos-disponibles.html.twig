<div class="productos-grid">
  {% for producto in productos %}
    <div class="producto-item">
      <img src="{{ producto.imagen_url }}" alt="{{ producto.title }}" class="producto-img"/>
      <h3 class="producto-title">{{ producto.title }}</h3>
      <input type="number" min="1" value="1" class="producto-cantidad" data-nid="{{ producto.nid }}" />
      <div class="precio-unitario">Precio: ${{ producto.precio|number_format(0, ',', '.') }}</div>
      <div class="precio-total">Total: ${{ producto.precio|number_format(0, ',', '.') }}</div>
      <button class="producto-btn" data-nid="{{ producto.nid }}" data-precio="{{ producto.precio }}">
        Agregar (1) - Total: ${{ producto.precio|number_format(0, ',', '.') }}
      </button>
    </div>
  {% endfor %}
</div>

